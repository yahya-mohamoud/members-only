<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <main class="login">
        <h1 class="lg-header">Welcome to <span>Destiny club house</span></h1>
    <div class="signupContainer formContainer">
        <form action="/auth/signup" method="post">
            <h2>Please Sign-up</h2>
             <% if(errors && errors.length > 0 ) { %>
                <ul>
                    <% errors.forEach(function (err) {  %>
                        <li class="error"><%= err.msg%></li>
                    <%})%>
                </ul>
          <%}%>
        <label for="firstname">First name</label>
        <input type="text" name="firstname" id="firstname" required placeholder="first name">
        <label for="lastname">Last name</label>
        <input type="text" name="lastname" id="lastname" required placeholder="lastname">
        <label for="username">Username</label>
        <input type="text" name="username" placeholder="username" id="username" required>
        <label for="password">Password</label>
        <input type="password" name="password" id="password" placeholder="********" required minlength="8">
        <button type="submit" class="btn submit">Submit</button>
        <p>You have an account <a href="/auth/login"> Sig-in here</a></p>
    </form>
</div>
    </main>

</body>
</html>