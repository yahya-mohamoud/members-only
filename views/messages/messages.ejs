<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('../partials/navbar.ejs', {user: user}) %>
    <% data.forEach(d => { %>
        <div class="messages">
            <% if(isMember === true && isMember !== '') {%>
            <h2><%= d.firstname.toUpperCase() + " " + d.lastname.toUpperCase()%></h2>
            <p>@ <%= d.username%></p>
            <p><%= dayjs(d.time).fromNow() %></p>
            <p class="messageData"><%= d.message%></p>
            <%if(admin) {%>
                <a href="/messages/delete/<%= d.mess_id%>" class="btn dltBtn">Delete messages</a>
            <%}%>
            <%} else {%>
              <h2>Anonymous</h2>
            <p>@*********</p>
            <p><%= dayjs(d.created_at).fromNow() %></p>
            <p class="messageData"><%= d.message%></p>
            <%if(admin) {%>
                <a href="/messages/delete/<%= d.mess_id%>" class="btn dltBtn">Delete messages</a>
            <%}%>
            <%}%>
        </div>
    <% }) %>
    <p><a class="create" href="/messages/create">Add Message</a></p>

</body>
</html>